            </TextBlock.Triggers>
        </TextBlock>
        <TextBlock Tag="3" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" Cursor="Hand" Grid.Column="4" Padding="10" Text="THÀNH VIÊN" FontSize="15" Foreground="Blue" VerticalAlignment="Center" HorizontalAlignment="Center">
