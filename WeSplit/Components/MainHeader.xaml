                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>
        <TextBlock Tag="5" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" Cursor="Hand" Grid.Column="6" Padding="10" Text="CÀI ĐẶT" FontSize="15" Foreground="Blue" VerticalAlignment="Center" HorizontalAlignment="Center">
