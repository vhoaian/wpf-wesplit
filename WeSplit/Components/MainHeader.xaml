                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>
        <TextBlock Tag="2" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" Cursor="Hand" Grid.Column="3" Padding="10" Text="ĐỊA ĐIỂM" FontSize="15" Foreground="Blue" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock.Background>
